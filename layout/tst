import React from 'react';
import {createBottomTabNavigator} from '@react-navigation/bottom-tabs';
// import { MaterialCommunityIcons, Ionicons } from '@expo/vector-icons';
import Icon from 'react-native-vector-icons/FontAwesome';

import {Platform} from 'react-native';
import TakeOrder from '../page/TakeOrder';
import {useTheme} from 'native-base';

interface FooterTabsProps {}

const Tab = createBottomTabNavigator();

const FooterTabs: React.FC<FooterTabsProps> = () => {
  const {colors, sizes} = useTheme();
  const iconSize: number = sizes[10];
  return (
    <Tab.Navigator
      screenOptions={{
        headerShown: false,
        tabBarActiveTintColor: colors.darkBlue[400],
        tabBarInactiveTintColor: colors.gray[200],
        tabBarStyle: {
          height: Platform.OS === 'android' ? 80 : 110,
          paddingBottom: Platform.OS === 'android' ? sizes[3] : sizes[10],
          paddingTop: sizes[2],
        },
      }}>
      <Tab.Screen
        name="TakeOrder"
        component={TakeOrder}
        options={{
          tabBarLabel: '接單',
          tabBarIcon: ({color}) => (
            <Icon name="solution1" size={iconSize} color={color} />
          ),
        }}
      />
      <Tab.Screen
        name="setting"
        component={TakeOrder}
        options={{
          headerShown: false,
          tabBarLabel: 'setting',
          tabBarIcon: ({ color }) => (
            <Icon name='setting' size={iconSize} color={color} />
          ),
        }}
      />
    </Tab.Navigator>
  );
};

export default FooterTabs;